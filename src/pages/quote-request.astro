---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Request a Quote | MVWorks">
  <main class="container">
    <header class="header">
      <h1>Request a Quote</h1>
      <p>
        MVWorks provides project-based joinery drafting and technical services for trade clients.
        Submit your project details below. We’ll review scope and inputs before issuing a quote.
      </p>
    </header>

    <section class="form-section" aria-label="MVWorks Quote Request Form">
      <div class="form-wrap">
        <iframe
          src="https://docs.google.com/forms/d/e/1FAIpQLSetKdrzDrJmsXN_5gLWfMz26556DQ5xK_fi_dsZKrUSmNxSyQ/viewform?embedded=true"
          width="100%"
          height="1800"
          loading="lazy"
          title="MVWorks Quote Request Form"
        >
          Loading…
        </iframe>
      </div>

      <p class="support-note">
        Files will be requested via confirmation email.
      </p>
    </section>
  </main>
</BaseLayout>

<style>
  .container {
    max-width: 980px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .header h1 {
    margin: 0 0 0.75rem;
  }

  .header p {
    margin: 0;
    opacity: 0.9;
    line-height: 1.5;
  }

  .form-section {
    margin-top: 1.5rem;
  }

  /* If the form feels too tall/short, adjust the iframe height above (1600/1800/2000). */
  .support-note {
    margin-top: 0.9rem;
    opacity: 0.85;
    font-size: 0.95rem;
    line-height: 1.45;
  }

  /* Optional: slightly tighter on mobile */
  @media (max-width: 640px) {
    .container {
      padding: 1.5rem 0.9rem;
    }
  }
  .form-wrap iframe {
  display: block;
  width: 100%;
}

@media (max-width: 640px) {
  .form-wrap iframe {
    height: 2000px;
  }
}
.form-section {
  padding-bottom: 1.25rem;
}

</style>
